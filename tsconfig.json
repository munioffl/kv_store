{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,          // Speeds up the build by skipping type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Avoids case-related issues
    "removeComments": true,        // Removes comments from the compiled output
    "resolveJsonModule": true      // Allows import of JSON modules
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
